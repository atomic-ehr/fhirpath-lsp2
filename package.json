{
  "name": "minimal-lsp-server",
  "version": "1.0.0",
  "description": "Minimal LSP server implementation",
  "main": "out/server.js",
  "scripts": {
    "build": "bunx tsc",
    "watch": "bunx tsc --watch",
    "dev": "bun run build && code --extensionDevelopmentPath=`pwd`/client",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lsp:stdio": "bun src/server.ts --stdio",
    "lsp:websocket": "bun src/server.ts --websocket",
    "lsp:websocket:port": "bun src/server.ts --websocket --port=4000",
    "debug": "bun debug/debug-server.ts --hot --watch",
    "debug:bg": "bun debug/debug-server.ts --hot --watch &"
  },
  "dependencies": {
    "@atomic-ehr/fhirpath": "file:../fhirpath",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.2",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "codemirror": "^6.0.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "@types/bun": "latest"
  },
  "private": true
}
